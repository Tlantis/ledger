}
page image {
  width: 100%;
  height: 100%;
}
page swiper {
  position: fixed;
  width: 750rpx;
  height: 200rpx;
  z-index: 1000;
}
page .total {
  position: fixed;
  top: 200rpx;
  z-index: 1000;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  color: #707070;
}
page .total .totalChild {
  padding: 10rpx 40rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: 250rpx;
  height: 80rpx;
}
page .total .rightTotalChild view {
  text-align: right;
}
page .total .addLedgerButton {
  height: 150rpx;
  width: 150rpx;
  background-color: #FFF;
  border-radius: 50%;
  border: 10rpx solid #707070;
  margin: auto;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
}
page .total .addLedgerButton image {
  height: 50%;
  width: 50%;
  -webkit-transform: translate(50%, 50%);
          transform: translate(50%, 50%);
}
page .midline {
  background-color: #ccc;
  width: 2rpx;
  height: 100%;
  position: fixed;
  right: 50%;
}
page .scrollDetailed {
  padding-top: 300rpx;
  height: 800rpx;
  /* detailed圣杯布局 */
}
page .scrollDetailed .detailedChild {
  font-size: 25rpx;
  position: relative;
  margin-bottom: 50rpx;
  /* border-top: 1rpx solid transparent; */
}
page .scrollDetailed .detailedChild .detailedChildLeft {
  display: inline-block;
  position: absolute;
  right: 55%;
  height: 40rpx;
  line-height: 40rpx;
}
page .scrollDetailed .detailedChild .detailedChildRight {
  display: inline-block;
  position: absolute;
  left: 55%;
  height: 40rpx;
  line-height: 40rpx;
}
page .scrollDetailed .detailedChild .detailedChildCentre {
  height: 40rpx;
}
page .scrollDetailed .detailedChild .detailedChildCentre .timeDots {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  height: 12rpx;
  width: 12rpx;
  border-radius: 50%;
  background-color: #888;
}
page .scrollDetailed .detailedChild .detailedChildCentre .dots {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  background-color: #556B2F;
}
page .scrollDetailed .detailedChild .detailedChildCentre .icon {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
page .scrollDetailed .Time {
  font-size: 20rpx;
  color: #707070;
}

